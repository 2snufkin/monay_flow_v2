# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano
OPENAI_TIMEOUT=30

# MongoDB Configuration (Atlas)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/excel_imports?retryWrites=true&w=majority
MONGO_DATABASE=excel_imports

# Database Settings
DB_MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/excel_imports?retryWrites=true&w=majority
DB_MONGO_DATABASE=excel_imports
DB_SQLITE_DB_PATH=data/templates.db

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Performance Settings
BATCH_SIZE=1000
MAX_WORKERS=4
MEMORY_LIMIT_MB=512

# Security Settings
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# UI Settings
UI_THEME=light
UI_LANGUAGE=en
UI_TIMEOUT_MS=30000

# Data Processing
DEFAULT_DATA_START_ROW=2
DEFAULT_DUPLICATE_STRATEGY=skip
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=xlsx,xls,csv

# AI Processing
AI_MAX_RETRIES=3
AI_RETRY_DELAY_MS=1000
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000
HEALTH_CHECK_INTERVAL=30



