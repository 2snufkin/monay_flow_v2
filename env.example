# MoneyFlow Data Ingestion App - Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
# Or for MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/

# Database Settings
DB_MONGO_DATABASE=excel_imports
DB_SQLITE_DB_PATH=data/templates.db

# AI Settings
AI_OPENAI_MODEL=gpt-4.1-nano
AI_OPENAI_MAX_RETRIES=3
AI_OPENAI_TIMEOUT=30

# Processing Settings
PROCESSING_BATCH_SIZE=1000
PROCESSING_MAX_FILE_SIZE_MB=100
PROCESSING_MAX_ROWS_PREVIEW=10
PROCESSING_DUPLICATE_STRATEGY=skip

# UI Settings
UI_WINDOW_WIDTH=800
UI_WINDOW_HEIGHT=600
UI_THEME=light
UI_AUTO_SAVE_SCHEMAS=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
